<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/roll_the_dice_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Roll The Dice"
        android:textSize="40sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.198"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.106" />

    <ImageView
        android:id="@+id/dice_b"
        android:layout_width="100dp"
        android:layout_height="96dp"
        android:layout_marginTop="52dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.263"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/roll_the_dice_label"
        app:srcCompat="@drawable/dice1" />

    <ImageView
        android:id="@+id/dice_c"
        android:layout_width="100dp"
        android:layout_height="96dp"
        android:layout_marginStart="20dp"
        app:layout_constraintStart_toEndOf="@+id/dice_b"
        app:layout_constraintTop_toTopOf="@+id/dice_b"
        app:srcCompat="@drawable/dice1" />

    <ImageView
        android:id="@+id/dice_h"
        android:layout_width="100dp"
        android:layout_height="96dp"
        android:layout_marginStart="-30dp"
        android:layout_marginTop="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.015"
        app:layout_constraintStart_toEndOf="@+id/dice_b"
        app:layout_constraintTop_toBottomOf="@+id/dice_b"
        app:srcCompat="@drawable/dice1" />

    <ImageView
        android:id="@+id/dice_a"
        android:layout_width="100dp"
        android:layout_height="96dp"
        android:layout_marginEnd="24dp"
        app:layout_constraintEnd_toStartOf="@+id/dice_b"
        app:layout_constraintTop_toTopOf="@+id/dice_b"
        app:srcCompat="@drawable/dice1" />

    <ImageView
        android:id="@+id/dice_d"
        android:layout_width="100dp"
        android:layout_height="96dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="-30dp"
        app:layout_constraintEnd_toStartOf="@+id/dice_b"
        app:layout_constraintHorizontal_bias="0.937"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/dice_b"
        app:srcCompat="@drawable/dice1" />

    <Button
        android:id="@+id/button_roll"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="276dp"
        android:backgroundTint="#2F2F2f"
        android:text="Roll"
        android:textColor="#FFFFFF"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.887"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/button_stop"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="116dp"
        android:backgroundTint="#2F2F2f"
        android:text="Stop"
        android:textColor="#FFFFFF"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.886"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>